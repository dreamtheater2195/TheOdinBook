<h1>Welcome to the Facebook Clone App</h1>

<% if user_signed_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= render 'shared/user_info' %>
      </section>
      <%= link_to "Create a post", new_post_path %>
    </aside>
  </div>
<% else %>
  <%= link_to "Sign up now!", new_user_registration_path %><br />
  <%= link_to "Sign in", new_user_session_path %> or <%= link_to "Sign in with Facebook", "/auth/facebook", id: "sign_in" %>
<% end %>
